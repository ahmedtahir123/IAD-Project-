@using PagedList.Mvc
@model  PagedList.IPagedList<SadsPakistan.Models.img>



<head>
    <link href="~/Content/paginition.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>


<section>
    <div class="container">


        <div class="row" style="margin-bottom:40px; margin-top:100px;">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(@item.url)" style="height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        @*<img src="@Url.Content("~/Content/web/building2.jpg")" />*@
                    </div>

                }
            }


            <div id="container" style="margin-left: 20px">
                <div class="pagination" style="margin-left: 400px">

                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("kitchenware", new { page }))
                </div>
            </div>
        </div>
</section>